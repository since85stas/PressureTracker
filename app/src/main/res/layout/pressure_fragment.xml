<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewModel"
            type="stas.batura.pressuretracker.ui.main.MainFragmentViewModel" />
    </data>

    <LinearLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.main.MainFragment"
        android:orientation="vertical"
        android:gravity="center"
        >

        <LinearLayout
            android:id="@+id/linear_conta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_gravity="center"
            >
            <Button
                android:id="@+id/start_rain_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="start rain"
                android:layout_margin="12dp"
                android:onClick="@{() -> viewModel.rainStart() }"
                />

            <Button
                android:id="@+id/stop_rain_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="stop rain"
                android:layout_margin="12dp"
                android:onClick="@{() -> viewModel.rainStop() }"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            >
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/pressure_recycle"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                 />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rain_recycle"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                 />
        </LinearLayout>


        <Button
            android:layout_gravity="center"
            android:id="@+id/stop_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="stop service"
            android:layout_margin="12dp"
            />

    </LinearLayout>
</layout>